{
  "parser": "babel-eslint",
  "plugins": [ "react" ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],  
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "forOf": true,
      "jsx": true
    }
  }
}